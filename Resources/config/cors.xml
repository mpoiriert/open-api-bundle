<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" autoconfigure="true" autowire="true">
            <bind key="$exposedHeaders">%draw_open_api.cors.exposed_headers%</bind>
            <bind key="$allowedHeaders">%draw_open_api.cors.allowed_headers%</bind>
            <bind key="$allowCredentials">%draw_open_api.cors.allow_credentials%</bind>
            <bind key="$allowAllOrigins">%draw_open_api.cors.allow_all_origins%</bind>
            <bind key="$allowAllHeaders">%draw_open_api.cors.allow_all_headers%</bind>
        </defaults>
        <prototype namespace="Draw\Bundle\OpenApiBundle\Cors\" resource="../../Cors" />
    </services>
</container>